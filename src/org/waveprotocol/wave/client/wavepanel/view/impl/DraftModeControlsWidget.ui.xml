<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
  xmlns:g="urn:import:com.google.gwt.user.client.ui">
  <ui:with field="res" type="org.waveprotocol.wave.client.wavepanel.view.impl.DraftModeControlsWidget.Resources"/>
  <ui:with field="msg" type="org.waveprotocol.wave.client.wavepanel.view.dom.full.i18n.DraftModeControlsMessages"/>
  
  <g:FlowPanel>
    <g:CheckBox ui:field="draftMode" styleName="{res.css.checkbox}" text="{msg.draft}"/>
    <g:SimplePanel ui:field="donePanel" styleName="{res.css.doneButton}"/>
    <g:SimplePanel ui:field="cancelPanel"/>
  </g:FlowPanel>
</ui:UiBinder>